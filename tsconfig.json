{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Import Aliases */
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@features/*": ["src/features/*"],
      "@config/*": ["src/app/config/*"],
      "@assets/*": ["src/app/assets/*"],
      "@store/*": ["src/app/store/*"],
      "@services/*": ["src/app/services/*"],
      "@hooks/*": ["src/app/hooks/*"],
      "@movies/*": ["src/features/movieLibrary/movies/*"],
      "@tvShows/*": ["src/features/movieLibrary/tvShows/*"],
      "@books/*": ["src/features/movieLibrary/books/*"],
      "@vinyls/*": ["src/features/movieLibrary/vinyls/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
